<div id="CommentModal" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Leave a comment on - </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id="NewComment">
            <div class="form-group">
                <label for="NewCommentBody">Comment</label>
                <textarea class="form-control" id="NewCommentBody" rows="3"></textarea>
            </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" id="PostNewComment" class="btn btn-primary">Post</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {

        var postID;

        $('.open-comment-modal').on('click', function() {
            postID = $(this).attr('data-id');
        });

        $('#PostNewComment').on('click', function() {
            var comment = $('#NewCommentBody').val();

            $.post('/articles/' + postID, {body: comment}, function() {
                console.log(comment);
            });
        })

    });
</script>